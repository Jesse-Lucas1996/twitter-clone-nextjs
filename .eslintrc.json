{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
   "next/core-web-vitals"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-unsafe-optional-chaining": "off",
    "no-unsafe-negation": "off"
    // Add more rules as per your preference
  }  
}
